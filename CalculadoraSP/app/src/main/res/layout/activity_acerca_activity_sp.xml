<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.calculadorasp.AcercaActivitySP">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIVERSIDAD LAICA ELOY ALFARO DE MANABI"
            android:id="@+id/textView"
            android:layout_weight="0.05"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FACULTAD DE CIENCIAS INFORMATICA"
            android:id="@+id/textView2"
            android:layout_weight="0.07"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROGRAMACION APLICADA A MOVIL"
            android:id="@+id/textView3"
            android:layout_weight="0.05"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ING. DIEGO TOALA"
            android:id="@+id/textView4"
            android:layout_weight="0.05"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TAREA: CALCULADORA BASICA"
            android:id="@+id/textView5"
            android:layout_weight="0.06"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PALACIOS LOOR STEFANY LILIBETH"
            android:id="@+id/textView6"
            android:layout_weight="0.05"
            android:textSize="35dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CUARTO NIVEL &quot;B&quot;"
            android:id="@+id/textView7"
            android:layout_weight="0.04"
            android:textSize="40dp" />
    </LinearLayout>
</RelativeLayout>
